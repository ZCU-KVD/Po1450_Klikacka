@page "/"

<PageTitle>Home</PageTitle>

<h1>Klikačka!</h1>

<div>
	<table>
		@for (int i = 0; i < Grafika.Pole.GetLength(0); i++)
		{
			var radka = i;
			<tr>
				@for (int j = 0; j < Grafika.Pole.GetLength(1); j++)
				{
					var sloupec = j;
					<td class="@Grafika.Pole[i,j].StyleClass" 
						@onclick="()=>Grafika.OnClickCell(Grafika.Pole[radka,sloupec])">
						@Grafika.Pole[i,j].Hodnota
					</td>
				}
			</tr>
		}
	</table>
</div>

@code {
	private Models.Grafika Grafika { get; set; } = new Models.Grafika();
}
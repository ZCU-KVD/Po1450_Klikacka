@page "/vyberBarvy"

<PageTitle>Klikačka</PageTitle>

<h3>Vybarvení tabulky</h3>

<div>
	<table>
		<tr>
			@foreach (var item in Grafika.BarvaSeznam)
			{
				<td class="@item.StyleClass"
					@onclick="()=>Grafika.OnClickCell(item)">
					@item.Hodnota
				</td>
			}
				
		</tr>
	</table>
</div>

<div>
	<table>
		@for (int i = 0; i < Grafika.Pole.GetLength(0); i++)
		{
			var radka = i;
			<tr>
				@for (int j = 0; j < Grafika.Pole.GetLength(1); j++)
				{
					var sloupec = j;
					<td class="@Grafika.Pole[i,j].StyleClass"
						@onclick="()=>Grafika.OnClickCell(Grafika.Pole[radka,sloupec], true)">
						@Grafika.Pole[i, j].Hodnota
					</td>
				}
			</tr>
		}
	</table>
</div>

@code {
	//private Models.Grafika Grafika { get; set; } = new Models.Grafika(10,15,3);
	private Models.Grafika Grafika { get; set; } = new Models.Grafika(10, 15);
}
